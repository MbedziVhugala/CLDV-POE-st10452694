@model ABCRetailers.Models.Product

@{
    ViewData["Title"] = "Edit Product";
}

<h2>Edit Product</h2>

<form asp-action="Edit" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="RowKey" />

    <!-- Show current image if exists -->
    @if (!string.IsNullOrEmpty(Model.ImageUrl))
    {
        <div class="form-group">
            <label>Current Image:</label>
            <div>
                <img src="@Model.ImageUrl" alt="@Model.ProductName" style="max-height: 200px;" class="img-thumbnail" />
            </div>
        </div>
    }

    <div class="form-group">
        <label for="imageFile" class="control-label">
            @(string.IsNullOrEmpty(Model.ImageUrl) ? "Upload Image" : "Change Image")
        </label>
        <input type="file" name="imageFile" id="imageFile" class="form-control"
               accept="image/*" />
        <small class="form-text text-muted">Leave empty to keep current image</small>
    </div>

    <div class="form-group">
        <label asp-for="ProductName" class="control-label"></label>
        <input asp-for="ProductName" class="form-control" />
        <span asp-validation-for="ProductName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description" class="control-label"></label>
        <textarea asp-for="Description" class="form-control" rows="3"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Price" class="control-label"></label>
        <input asp-for="Price" class="form-control" type="number" step="0.01" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="StockAvailable" class="control-label"></label>
        <input asp-for="StockAvailable" class="form-control" type="number" />
        <span asp-validation-for="StockAvailable" class="text-danger"></span>
    </div>

    <div class="form-group mt-3">
        <button type="submit" class="btn btn-primary">Update Product</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>