@model List<ABCRetailers.Models.Product>

@{
    ViewData["Title"] = "Products";
}

<h2>Products</h2>

<p>
    <a asp-action="Create" class="btn btn-success">Add New Product</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Image</th>
            <th>Product Name</th>
            <th>Description</th>
            <th>Price</th>
            <th>Stock</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>
                    @if (!string.IsNullOrEmpty(product.ImageUrl))
                    {
                        <img src="@product.ImageUrl" alt="@product.ProductName"
                             style="max-height: 50px; max-width: 50px;" class="img-thumbnail" />
                    }
                    else
                    {
                        <span class="text-muted">No Image</span>
                    }
                </td>
                <td>@product.ProductName</td>
                <td>@product.Description</td>
                <td>@product.Price.ToString("C")</td>
                <td>
                    <span class="badge @(product.StockAvailable > 10 ? "bg-success" :
                                                                 product.StockAvailable > 0 ? "bg-warning" : "bg-danger")">
                    @product.StockAvailable
                </span>
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@product.RowKey" class="btn btn-sm btn-primary">Edit</a>
                <form asp-action="Delete" method="post" class="d-inline">
                    <input type="hidden" name="id" value="@product.RowKey" />
                    <button type="submit" class="btn btn-sm btn-danger"
                            onclick="return confirm('Are you sure you want to delete this product?')">
                        Delete
                    </button>
                </form>
            </td>
        </tr>
                }
    </tbody>
</table>