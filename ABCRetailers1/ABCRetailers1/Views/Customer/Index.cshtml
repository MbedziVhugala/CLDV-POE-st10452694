@model List<ABCRetailers.Models.Customer>

@{
    ViewData["Title"] = "Customers";
}

<h2>Customers</h2>

<p>
    <a asp-action="Create" class="btn btn-success">Add New Customer</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Username</th>
            <th>Email</th>
            <th>Shipping Address</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var customer in Model)
        {
            <tr>
                <td>@customer.Name @customer.Surname</td>
                <td>@customer.Username</td>
                <td>@customer.Email</td>
                <td>@customer.ShippingAddress</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@customer.RowKey" class="btn btn-sm btn-primary">Edit</a>
                    <form asp-action="Delete" method="post" class="d-inline">
                        <input type="hidden" name="id" value="@customer.RowKey" />
                        <button type="submit" class="btn btn-sm btn-danger"
                                onclick="return confirm('Are you sure you want to delete this customer?')">
                            Delete
                        </button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>