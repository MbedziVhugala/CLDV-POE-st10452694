@model List<ABCRetailers.Models.Order>

@{
    ViewData["Title"] = "Orders";
}

<h2>Orders</h2>

<p>
    <a asp-action="Create" class="btn btn-success">Create New Order</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Order ID</th>
            <th>Customer</th>
            <th>Product</th>
            <th>Order Date</th>
            <th>Quantity</th>
            <th>Total Price</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.OrderId</td>
                <td>@order.Username</td>
                <td>@order.ProductName</td>
                <td>@order.OrderDate.ToString("MM/dd/yyyy")</td>
                <td>@order.Quantity</td>
                <td>@order.TotalPrice.ToString("C")</td>
                <td>
                    <span class="badge @(order.Status == "Completed" ? "bg-success" :
                                                                 order.Status == "Processing" ? "bg-warning" :
                                                                 order.Status == "Cancelled" ? "bg-danger" : "bg-info")">
                    @order.Status
                </span>
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@order.RowKey" class="btn btn-sm btn-info">Details</a>
                <a asp-action="Edit" asp-route-id="@order.RowKey" class="btn btn-sm btn-primary">Edit</a>
                <form asp-action="Delete" method="post" class="d-inline">
                    <input type="hidden" name="id" value="@order.RowKey" />
                    <button type="submit" class="btn btn-sm btn-danger"
                            onclick="return confirm('Are you sure you want to delete this order?')">
                        Delete
                    </button>
                </form>
            </td>
        </tr>
                }
    </tbody>
</table>